<div class="container">
  <div class="row">
  <div class="col-xs-4 col-xs-offset-4">
      <%= simple_form_for(resource, as: resource_name, url: admin_session_path(resource_name)) do |f| %>
      <div class="form-inputs">
      <div>メールアドレス<%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" }, label: false %>
      </div>
      <div>パスワード<%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" }, label: false %>
      </div>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "ログイン", class: "btn btn-primary" %>
      </div>
      <% end %>
  </div>
  </div>
</div>
<%= render "users/shared/links" %>
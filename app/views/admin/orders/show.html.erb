<div class="container">
  <div class="row">
	<h2>注文詳細画面</h2>
	<table class="table col-xs-10 col-xs-offset-1">
	  <tr>
		<th>購入者</th>
		<th><%#= @user.first_name %></th>
	  </tr>

	  <tr>
		<th>配送先</th>
		<th><%= @order.postcode %><%= @order.address %>
		<th><%= @order.name %></th>
	  </tr>

	  <tr>
		<th>支払方法</th>
		<th><%= @order.payment %></th>
	  </tr>
      <% form_for @order, url: admin_order_path(@order) do |f| %>
	  <tr>
		<th>注文ステータス</th>
		<th><%#= f.select :order_status,options_for_select([['入金待ち', '入金待ち'], ['入金確認', '入金確認'],['製作中','製作中']['発送準備中','発送準備中']['発送済み','発送済み']]), class: "btn btn-info" %></th>
		<th><%= f.submit "更新", class: "btn btn-primary" %>
		</th>
	  </tr>
	  <% end %>
	</table>

	<table class="table col-xs-10 col-xs-offset-1" style="margin-top: 20px;">
    <thead>
		  <tr>
			<th>商品名</th>
			<th>単価(税込)</th>
			<th>数量</th>
			<th>小計</th>
			<th>製作ステータス</th>
		  </tr>
		</thead>

		<tbody>
			<tr>
			  <td><%#= @order.item.name %></td>
			  <td><%#= (@order.item.price * 1.08).to_i %></td>
			  <td><%#= @order.item.sale_status %></td>
			  <td><%#= (@order.item.price * @order.item.sale_status * 1.08).to_i %></td>
            <%# form_for order, url: admin_order_path(order) do |f| %>
              <td>
              <%#= f.select :sale_status,options_for_select([['着手不可', '着手不可'], ['製作待ち', '製作待ち'],['製作中','製作中']['製作完了','製作完了']]), class: "btn btn-info" %>
              <%#= f.submit "更新", class: "btn btn-primary" %>
			  </td>
			</tr>
		  <%# end %>
		</tbody>
	  </table>
	</table>
  </div>
</div>
<div class="container">
  <div class="row">
  <h2>ジャンル編集画面</h2>

  <div class="" style="margin-top: 50px;">
  <%= form_for(@genre, url: admin_genre_path) do |f| %>
    <%= "ジャンル" %>
    <%= f.text_field :genre_name %>
    <%= f.label :genre_status, :有効 %>
    <%= f.radio_button :genre_status, "有効" %>
    <%= f.label :genre_status, :無効 %>
    <%= f.radio_button :genre_status, "無効" %>
    <%= f.submit '変更を保存する', class: "btn btn-primary" %>
  <% end %>
  </div>
</div>
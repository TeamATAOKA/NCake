<div class="container">
  <div class="row">
  </div>
  <h1>ジャンル編集画面</h1>

  <%= form_for(@genre, url: admin_genre_path) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :genre_name, class: "col-xs-12" %>
      <%= f.label :genre_status, :有効 %>
      <%= f.radio_button :genre_status, "有効" %>
      <%= f.label :genre_status, :無効 %>
      <%= f.radio_button :genre_status, "無効" %>
      <%= f.submit '変更を保存する', class: "col-xs-12 btn btn-primary" %>
  <% end %>

</div>
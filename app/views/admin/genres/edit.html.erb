<div class="container">
  <div class="row">
  </div>
  <h1>ジャンル編集画面</h1>

  <%= form_for(@genre) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :name, class: "col-xs-12" %>

    <%= form_with(model: genre, local: true) do |f| %>
      <%= f.label :genre_status, :有効 %>
      <%= f.radio_button :genre_status, 1 %>
      <%= f.label :genre_status, :無効 %>
      <%= f.radio_button :genre_status, 2 %>
      <%= f.submit '変更を保存する',admin_genres_path(@genre), class: "col-xs-12 btn btn-primary" %>
    <% end %>
  <% end %>

</div>
<div class="container">
  <div class="row">
  </div>
  <h1>ジャンル追加・一覧画面</h1>

  <%= form_for(@genre, url: admin_genres_path) do |f| %>
    <h4>ジャンル</h4>
    <div class="col-xs-3" ><%= f.text_field :genre_name %>
    <%= f.label :genre_status, :有効 %>
    <%= f.radio_button :genre_status, "有効" %>
    <%= f.label :genre_status, :無効 %>
    <%= f.radio_button :genre_status, "無効" %></div>
    <%= f.submit '追加', class: "col-xs-3 btn btn-primary" %>
  <% end %>

		<table class="table table-striped">
			<thead>
				<tr>
					<th>ジャンル</th>
					<th>状態</th>
					<th></th>
				</tr>
			</thead>
            <tbody>
            <% @genres.each do |genre| %>
 	            <tr>
                   <td><%= genre.genre_name %></td>
                   <td><%= genre.genre_status %></td>
                   <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "col-xs-2 btn btn-info" %></td>
 	            </tr>
            <% end %>
            </tbody>
        </table>
</div>
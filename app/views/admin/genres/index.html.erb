<div class="container">
  <div class="row">

  <h1>ジャンル追加・一覧画面</h1>

    <div>
      <%= form_for(@genre, url: admin_genres_path) do |f| %>
      <%= "ジャンル" %>
      <%= f.text_field :genre_name %>
      <%= f.label :genre_status, :有効 %>
      <%= f.radio_button :genre_status, "有効" %>
      <%= f.label :genre_status, :無効 %>
      <%= f.radio_button :genre_status, "無効" %>
      <%= f.submit '追加', class: "btn btn-primary" %>
      <% end %>
    </div>
    <div class="col-xs-8">
		<table class="table table-striped" style="margin-top: 50px;">
			<thead>
				<tr>
					<th>ジャンル</th>
					<th>状態</th>
					<th></th>
				</tr>
			</thead>
            <tbody>
            <% @genres.each do |genre| %>
 	            <tr>
                   <td><%= genre.genre_name %></td>
                   <td><%= genre.genre_status %></td>
                   <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "col-xs-6 btn btn-primary" %></td>
 	            </tr>
            <% end %>
            </tbody>
        </table>
  </div>
</div>
<div class="container">
  <p id="notice"></p>
  <div class="row">
  <div class="col-xs-6 col-xs-offset-3">
  <h1>商品一覧画面</h1>

  <table class="table table-striped">
	<thead>
		<tr>
			<th>商品ID</th>
			<th>商品名</th>
			<th>税抜価格</th>
			<th>ジャンル</th>
			<th>ステータス</th>
		</tr>
	</thead>

	<tbody>
		<% @items.each do |item| %>

		<tr>
			<td><%= item.id %></td>
			<td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price %></td>
            <td><%= genre.item.genre.name %></td>
            <td><%= item.sales_status %></td>
		</tr>
		<% end %>

	</tbody>
  </table>
  </div>
  </div>
</div>
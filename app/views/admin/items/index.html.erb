<div class="container">
  <div class="row">
  <div class="col-xs-10 col-xs-offset-1">
  <h2>商品一覧画面</h2>

  <%= link_to new_admin_item_path do %>
  <i class="fas fa-plus-circle fa-2x" style="float:right;"></i>
  <% end %>

  <table class="table">
	<thead>
		<tr>
			<th>商品ID</th>
			<th>商品名</th>
			<th>税抜価格</th>
			<th>ジャンル</th>
			<th>ステータス</th>
		</tr>
	</thead>

	<tbody>
		<% @items.each do |item| %>
		<tr>
			<td><%= item.id %></td>
			<td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.genre_name %></td>
            <td><%= item.sale_status %></td>
		</tr>
		<% end %>
	</tbody>
  </table>
  <%= paginate @items, class: "pagenate" %>
  </div>
  </div>
</div>
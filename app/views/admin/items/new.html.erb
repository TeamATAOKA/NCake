<div class="container">
  <div class="row">

  	<h2>商品新規登録画面</h2>
  	  <!-- ルートの設定 -->
  	  <%= form_for(@item, url: admin_items_path) do |f| %>
  	  <div class="col-xs-4">
  	  <%= attachment_image_tag @item, :image, :fill, 100,100, fallback: "no_image.jpg" %>

        <!-- 画像選択ボタン -->
  	    <div class="field">
  	  	  <%= f.label :image %>
  	  	  <%= f.attachment_field :image %>
  	    </div>
  	  </div>

        <table class="table">
  	  	  <div class="col-xs-8">
		    <tr>
			  <th>商品名</th>
	    	  <th><%= f.text_field :name %></th>
			</tr>
			<tr>
			  <th>商品説明</th>
	    	  <th><%= f.text_area :text %></th>
			</tr>
			<tr>
			  <th>ジャンル</th>
	    	  <th><%= f.collection_select :genre_id, @genres, :id, :genre_name, class: "btn btn-info" %></th>
			</tr>
			<tr>
			  <th>税抜価格</th>
	    	  <th><%= f.number_field :price %>円</th>
			</tr>
			<tr>
			  <th>販売ステータス</th>
	    	  <th><%= f.select :sale_status,options_for_select([['販売中', '販売中'], ['販売停止中', '販売停止中']]), class: "btn btn-info" %></th>
		    </tr>
	      </div>
	    </table>
		<%= f.submit '新規登録', class: "col-xs-4 btn btn-primary" %>
	  <% end %>

  </div>
</div>
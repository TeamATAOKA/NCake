<div class="container">
  <p id="notice"></p>
  <div class="row">

  	<h2>商品詳細画面</h2>

      <div class="col-xs-3">
  	  <%= attachment_image_tag item, :item_image, :fill, 100,100, fallback: "no-image.jpg" %>
  	  </div>

        <table class="table">
  	  	  <div class="col-xs-9">
		    <tr>
			  <th>商品名</th>
	    	  <th><%= @item.name %></th>
	    	</tr>
	    	<tr>
			  <th>商品説明</th>
	    	  <th><%= @item.text %></th>
	    	</tr>
	    	<tr>
			  <th>ジャンル</th>
	    	  <th><%= @genre.item %></th>
	    	</tr>
	    	<!-- 税込価格の計算式記述 -->
	    	<tr>
			  <th>税込価格（税抜価格）</th>
	    	  <th><%= @item.price, @item.price %></th>
	    	</tr>
	    	<tr>
			  <th>販売ステータス</th>
	    	  <th><%= @item.sales_status %></th>
		    </tr>
	      </div>
	    </table>
  </div>
</div>
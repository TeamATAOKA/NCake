<div class="container">
  <div class="row">

  	<h2>商品詳細画面</h2>

      <div class="col-xs-4">
  	  <%= attachment_image_tag @item, :image, :fill, 100,100, fallback: "no_image.jpg" %>
  	  </div>

        <table class="table">
  	  	  <div class="col-xs-8">
		    <tr>
			  <th>商品名</th>
	    	  <th><%= @item.name %></th>
	    	</tr>
	    	<tr>
			  <th>商品説明</th>
	    	  <th><%= @item.text %></th>
	    	</tr>
	    	<tr>
			  <th>ジャンル</th>
	    	  <th><%= @item.genre.genre_name %></th>
	    	</tr>
	    	<!-- 税込価格の計算式記述 -->
	    	<tr>
			  <th>税込価格（税抜価格）</th>
	    	  <th><%= @item.price %></th>
	    	</tr>
	    	<tr>
			  <th>販売ステータス</th>
	    	  <th><%= @item.sale_status %></th>
		    </tr>
	      </div>
	    </table>
	    <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-primary" %>
  </div>
</div>
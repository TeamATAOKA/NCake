<div class="container">
  <div class="row">
	<h2>会員詳細画面</h2>
	<table class="table col-xs-10 col-xs-offset-1">
	  <tr>
		<th>顧客ID</th>
		<th><%= @user.id %><%= @user.user_status %></th>
	  </tr>

	  <tr>
		<th>氏名</th>
		<th><%= @user.name %></th>
	  </tr>

	  <tr>
		<th>フリガナ</th>
		<th><%= @user.name_kana %></th>
	  </tr>

	  <tr>
		<th>郵便番号</th>
		<th><%= @user.postcode %></th>
	  </tr>

	  <tr>
		<th>住所</th>
		<th><%= @user.address %></th>
	  </tr>

	  <tr>
        <th>電話番号</th>
	    <th><%= @user.phone_number %></th>
	  </tr>

	  <tr>
		<th>メールアドレス</th>
		<th><%= @user.email %></th>
	  </tr>

	  <tr>
	    <th><%= link_to '編集する', edit_admin_user_path(@user), class: "btn btn-primary col-xs-6" %></th>
	    <th><%= link_to '注文履歴一覧を見る', admin_orders_path, class: "btn btn-primary" %></th>
	  </tr>
	</table>
  </div>
</div>
<div class="container">
  <div class="row">
    <% if @user.errors.any? %>
    <div id="error-explanation">
      <h2><%= @user.errors.count %> errors prohibited this book from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <h2>会員編集画面</h2>

    <table class="table">
      <%= form_for(@user, url: admin_user_path) do |f| %>
      <div class="field">
        <tr>
          <th><%= f.label :氏名 %></th>
          <th><%= f.text_field :first_name %></th>
          <th><%= f.text_field :last_name %></th>
        </tr>
      </div>
      <div class="field">
        <tr>
          <th><%= f.label :フリガナ %></th>
          <th><%= f.text_field :first_name_kana %></th>
          <th><%= f.text_field :last_name_kana %></th>
        </tr>
      </div>
      <div class="field">
        <tr>
          <th><%= f.label :郵便番号 %></th>
          <th><%= f.text_field :postcode %></th>
        </tr>
      </div>
      <div class="field">
        <tr>
          <th><%= f.label :住所 %></th>
          <th><%= f.text_field :address %></th>
        </tr>
      </div>
      <div class="field">
        <tr>
          <th><%= f.label :電話番号 %></th>
          <th><%= f.text_field :phone_number %></th>
        </tr>
      </div>
      <div class="field">
        <tr>
          <th><%= f.label :メールアドレス %></th>
          <th><%= f.email_field :email %></th>
        </tr>
      </div>
      <div class="field">
        <%#= f.label :会員ステータス %>
        <%#= form_with model: User.new, locale: true do |f| %>
          <%#= f.label :有効 %>
          <%#= f.radio_button :status, 1 %>
          <%#= f.label :退会済み %>
          <%#= f.radio_button :status, 2 %>
          <%#= f.submit %>
        <%# end %>
      </div>
      <div class="actions">
        <tr>
          <th><%= f.submit "変更を保存する", class: "btn btn-primary" %></th>
        </tr>
      </div>
      <% end %>
    </table>

  </div>
</div>
<div class="container">
  <div class="row">
    <% if @user.errors.any? %>
    <div id="error-explanation">
      <h2><%= @user.errors.count %> errors prohibited this book from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

      <h2>登録情報編集</h2>

    <table class="table">
    <%= form_for @user, url: user_path(@user) do |f| %>

      <div class="field">
        <tr>
          <th><%= f.label :名前 %></th>
          <th>(姓)<%= f.text_field :first_name %></th>
          <th>(名)<%= f.text_field :last_name %></th>
        </tr>
      </div>
      <div class="field">
        <tr>
        <th><%= f.label :フリガナ %></th>
          <th>(セイ)<%= f.text_field :first_name_kana %></th>
          <th>(メイ)<%= f.text_field :last_name_kana %></th>
        </tr>
      </div>
      <div class="field">
        <tr>
          <th><%= f.label :メールアドレス %></th>
          <th><%= f.email_field :email %></th>
        </tr>
      </div>
      <div class="field">
        <tr>
          <th><%= f.label :郵便番号 %></th>
          <th><%= f.text_field :postcode %></th>
        </tr>
      </div>
      <div class="field">
        <tr>
          <th><%= f.label :住所 %></th>
          <th><%= f.text_field :address, class: "col-xs-12" %></th>
        </tr>
      </div>
      <div class="field">
        <tr>
          <th><%= f.label :電話番号 %></th>
          <th><%= f.text_field :phone_number %></th>
        </tr>
      </div>
        <tr>
          <th><%= f.submit "変更内容を保存する", class: "btn btn-primary" %></th>
          <th><%= link_to "退会する", users_withdrawal_path(current_user), class: "btn btn-danger" %></th>
         </tr>
    <% end %>
    </table>
  </div>
</div>
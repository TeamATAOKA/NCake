<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h3>ジャンル</h3>
      <table class="table">
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.genre_name %></td>
        </tr>
        <% end %>
      </table>
    </div>
    <div class="col-xs-3">
     <%= attachment_image_tag @item, :image, :fill, 100,100, fallback: "no_image.jpg" %>
   </div>
   <div class="col-xs-6">
    <table class="table">
      <tr>
        <th><%= @item.name %></th>
      </tr>
      <tr>
        <th><%= @item.text %></th>
      </tr>
      <tr>
        <!-- 税込にする計算式を記述 -->
        <th><%= @item.price %>(税込)</th>
      </tr>
      <tr>
       <% if user_signed_in? %>
       <th><%= form_for @cart_item, url: user_cart_items_path(@user, @cart_item.id) do |f| %>
          <%= f.hidden_field :item_id, :value => @item.id %>
          <%= f.label :item_id %>
        <%= f.select :item_count,options_for_select((1..10)), class: "btn btn-info" %>
        <%= f.submit "カートに入れる", class: "btn btn-primary" %>
      </div>
      <% end %>
      <% end %>
    </th>
  </tr>

</table>
</div>
</div>
</div>

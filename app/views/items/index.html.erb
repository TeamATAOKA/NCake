<div class="container">
  <div class="row">
  <div class="col-xs-4">
      <h2>ジャンル検索</h2>
      <table class="table">
      <% @genres.each do |genre| %>
      <tr>
          <td><%= genre.genre_name %></td>
      </tr>
      <% end %>
      </table>
  </div>

    <div class="col-xs-8">
  	<h2>商品一覧(全<%= @items.count %>)件</h2>
    <table class="table">
  	  <% @items.each do |item| %>
  	    <tr>
          <td><%= link_to item_path(item.id) do %>
  	  	    <%= attachment_image_tag(item, :image, :fill,80,80,fallback: "no_image.jpg") %>
            <% end %></td>
  	  	    <td><%= item.name %></td>
  	  	    <td>¥<%= item.price %></td>

        <tr>
      <% end %>
    </table>
       <%#= paginate @items, class: "pagenate" %>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h3>ジャンル</h3>
      <table class="table">
        <% @genres.each do |genre| %>
        <% if genre.genre_status == '有効' %>
        <tr>
          <td><%= genre.genre_name %></td>
        </tr>
        <% end %>
        <% end %>
      </table>
    </div>

    <div class="col-xs-9">
      <table class="table">
       <h2>商品一覧(全<%= @items.count %>)件</h2>
       <div class="row">
         <% @items.each do |item| %>
         <% if item.sale_status == '販売中' %>
         <div class="col-xs-3">
           <tr>
            <td><%= link_to item_path(item.id) do %>
              <%= attachment_image_tag(item, :image, :fill,80,80,fallback: "no_image.jpg") %>
              <% end %>
            </td>
            <td><%= item.name %></td>
            <td>¥<%= item.price %></td>
          </tr>
        </div>
        <% end %>
        <% end %>
      </div>
    </table>
    <%= paginate @items, class: "pagenate" %>
  </div>
</div>
</div>
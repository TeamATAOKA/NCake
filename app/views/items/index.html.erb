<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>ジャンル検索</h2>
      <table class="table">
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.genre_name %></td>
        </tr>
        <% end %>
      </table>
    </div>

    <div class="col-xs-9">
      <table class="table">
       <h2>商品一覧(全<%= @items.count %>)件</h2>
       <div class="row">
         <% @items.each do |item| %>
         <div class="col-xs-3">
           <tr>
            <td><%= link_to item_path(item.id) do %>
              <%= attachment_image_tag(item, :image, :fill,80,80,fallback: "no_image.jpg") %>
              <% end %>
            </td>
            <td><%= item.name %></td>
            <td>¥<%= item.price %></td>
          </tr>
        </div>
        <% end %>
      </div>
    </table>
  </div>
</div>
</div>
       <%#= paginate @items, class: "pagenate" %>
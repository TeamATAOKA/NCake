<div class="container">
  <div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <h3>注文履歴詳細</h3>
    <h4>注文情報</h4>
    <table class="table">
		<tr>
			<th>注文日</th>
			<th><%= @order.created_at %></th>
		</tr>
	    <tr>
			<th>配送先</th>
			<th><%= @order.postcode %></th>
            <th><%= @order.address %></th>
            <th><%= @order.name %></th>
		</tr>
		<tr>
			<th>支払方法</th>
			<th><%= @order.payment %></th>
		</tr>
		<tr>
			<th>ステータス</th>
			<th><%= @order.order_status %></th>
		</tr>

	</table>
	<div class="price-detail" style="float: right;">
	<h4>請求情報</h4>
    <table>
    <tr>
	  <th>商品合計</th>
	  <th><%= (@order.total_price - @order.postage).to_i %></th>
	</tr>
    <tr>
	  <th>配送料</th>
	  <th><%= @order.postage %></th>
	</tr>
	<tr>
      <th>ご請求額</th>
      <th><%= ＠order.total_price %></th>
    </tr>
    </table>
    </div>

    <h4>注文内容</h4>
	<table>
		<thead>
			<tr>
				<th>商品</th>
				<th>単価(税込)</th>
				<th>個数</th>
				<th>小計</th>
			</tr>
		</thead>
		<tbody>
			<td><%= @item.name %></td>
			<td><%= @order_item.sale_price %></td>
		    <td><%= @order_item.item_count %></td>
		    <td><%= (@order_item.item_count * @order_item.sale_price * 1.08).to_i %></td>
		</tbody>
    </table>
  </div>
  </div>
</div>
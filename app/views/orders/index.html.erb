<div class="container">
  <div class="row">
	<h3>注文履歴一覧画面</h3>
	<div class="col-xs-10 col-xs-offset-1">
	  <table class="table">
		<thead>
		  <tr>
			<th>注文日</th>
			<th>配送先</th>
			<th>注文商品</th>
			<th>支払金額</th>
			<th>ステータス</th>
			<th>注文詳細</th>
		  </tr>
		</thead>

		<tbody>
		  <% @orders.each do |order| %>
			<tr>
			  <td><%= order.created_at %></td>
			  <td><%= order.postcode %>
			  	  <%= order.address %>
			  	  <%= order.name %>
			  </td>
			  <td><%= @order_item.item_id.name %></td>
			  <td><%= order.total_price %></td>
			  <td><%= order.order_status %></td>
			  <td><%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %>
			</tr>
		  <% end %>
		  <%#= paginate @orders, class: "pagenate" %>
		</tbody>
	  </table>
	</div>
  </div>
</div>
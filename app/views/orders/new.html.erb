<%= form_for @order, url:confirm_user_orders_path do |f| %>
    <%= f.label :payment, :クレジットカード %>
    <%= f.radio_button :payment, "クレジットカード" %></br>
    <%= f.label :payment, :銀行振込 %>
    <%= f.radio_button :payment, "銀行振込" %></br>

    <%= f.label :address, :ご自身の住所 %>
    <%= f.radio_button :address, "ご自身の住所" %></br>
    <%= @user.postcode %><%= @user.address %></br>
    <%= @user.name %></br>

    <%= f.label :address, :登録済み住所から選択 %>
    <%= f.radio_button :address, "登録済み住所から選択" %></br>
    <%= f.collection_select :id, @posts, :id, :full_address, class: "btn btn-info" %></br>

    <%= f.label :address, :新しいお届け先 %>
    <%= f.radio_button :address, "新しいお届け先" %></br>
    <p>郵便番号(ハイフンなし)</p>
    <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %></br>
    <p>住所</p>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %></br>
    <p>宛名</p>
    <%= f.text_field :name, autofocus: true, autocomplete: "postcode" %></br>
    <div class="actions">
    <%= f.submit "確認画面へ進む", class: "btn btn-default pull-right" %>
 	  </div>
<% end %>


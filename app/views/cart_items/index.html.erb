<div class="container">
  <div class="row">
  <div class="col-xs-10 col-xs-offset-2">
    <a>ショッピングカート</a>
    <%= link_to "カートを空にする", user_cart_items_path(@cart_item),method: :delete, class: "btn btn-danger" %>
    <table class="table table-striped">
	<thead>
		<tr>
			<th>商品</th>
			<th>単価(税込)</th>
			<th>数量</th>
			<th>小計</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
  	  <% @user.cart_items.each do |cart_item| %>
		<tr>
			<td><%= attachment_image_tag(cart_item.item, :image, :fill,40,40,fallback: "no_image.jpg") %><%= cart_item.item.name %></td>
			<!-- 税込の計算式を記述 -->
			<td><% cart_item.item.price * 1.08 %>
				<%= cart_item.item.price %>
			</td>
			<!-- 数量のBOX+変更ボタン -->
			<td></td>
			<!-- 数量に合わせた合計金額を記述 -->
			<td><%= cart_item.item.price * cart_item.item_count * 1.08 %></td>
			<!-- 商品をカート内から削除するボタン -->
			<td><%= link_to "削除する", user_cart_items_path(cart_item.item.id, cart_item_id: cart_item.id),method: :delete, class: "btn btn-danger" %></td>
		</tr>
	  <% end %>
      <%= link_to "買い物を続ける",root_path, class: "btn btn-primary" %>
      <div class="total_price">
      合計金額
      </div>
      <div class="total_price_view">
       <%#= cart_item.price * cart_item.item_count * 1.08 %>
      </div>
      <%= link_to "情報入力に進む",new_user_order_path, class: "col-xs-6 col-xs-offset-3" %>
	</tbody>
    </table>
  </div>
</div>